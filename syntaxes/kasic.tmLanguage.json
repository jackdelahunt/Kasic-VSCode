{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Kasic",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#language"
		},
		{
			"include": "#scope"
		},
		{
			"include": "#flags"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.kasic",
				"match": "\\b(add|and|bool|&bool|clear|div|exit|goto|great|if|in|less|mult|not|num|&num|or|print|replace|string|&string)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.kasic",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.kasic",
					"match": "\\\\."
				}
			]
		},
		"language": {
			"patterns": [{
				"name": "constant.language.kasic",
				"match": "\\b(?i)(true|false)\\b"
			}]
		},
		"scope": {
			"patterns": [{
				"name": "entity.name.function.kasic",
				"match": "(>.*)"
			}]
		},
		"flags": {
			"patterns": [{
				"name": "entity.name.function.kasic",
				"match": "\\b(^[-].*)\\b"
			}]
		}
	},
	"scopeName": "source.kasic"
}